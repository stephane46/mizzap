    "@supabase/supabase-js": "^2.38.4",
    "drizzle-orm": "^0.29.1",
    "postgres": "^3.4.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
